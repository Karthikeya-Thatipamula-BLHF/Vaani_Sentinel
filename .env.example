# Vaani Sentinel X - Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Required)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here_optional

# Security (Required)
SECRET_KEY=your_super_secret_jwt_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Database
DATABASE_URL=sqlite:///./vaani_sentinel.db
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# Content Settings
MAX_CONTENT_SIZE=10485760
SUPPORTED_LANGUAGES=en,hi,sa,mr,gu,ta,te,kn,ml,bn,de,fr,es,it,pt,ru,ja,ko,zh,ar
DEFAULT_LANGUAGE=en

# Security Features
PROFANITY_CHECK_ENABLED=true
BIAS_DETECTION_ENABLED=true
CONTENT_ENCRYPTION_ENABLED=true

# TTS Configuration
GOOGLE_TTS_CREDENTIALS_PATH=./config/google-tts-credentials.json

# AI Model Configuration
GEMINI_MODEL=gemini-1.5-flash
GROQ_MODEL=llama-3.1-8b-instant
GROQ_FALLBACK_MODEL=mixtral-8x7b-32768
PRIMARY_AI_PROVIDER=groq
FALLBACK_AI_PROVIDER=gemini
